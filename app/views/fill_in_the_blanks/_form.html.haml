= form_for @fill_in_the_blank do |f|
  -if @fill_in_the_blank.errors.any?
    #error_explanation
      %h2= "#{pluralize(@fill_in_the_blank.errors.count, "error")} prohibited this fill_in_the_blank from being saved:"
      %ul
        - @fill_in_the_blank.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
