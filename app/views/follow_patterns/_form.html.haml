= form_for @follow_pattern do |f|
  -if @follow_pattern.errors.any?
    #error_explanation
      %h2= "#{pluralize(@follow_pattern.errors.count, "error")} prohibited this follow_pattern from being saved:"
      %ul
        - @follow_pattern.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :instruction
    = f.text_area :instruction
  .field
    = f.label :pattern
    = f.text_area :pattern
  .actions
    = f.submit 'Save'
