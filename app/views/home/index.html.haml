- @title = t ".competition_system"
- @categories.each do |category|
  .item{:id => category.dom_name}
    %table
      %tr
        %td.logo_cell
          - img = image_tag category.image, :size => "96x64"
          = category.available? ? link_to(img, category) : img
        %td
          %div= category.available? ? link_to(category.name, category) : category.name
          %div
            .description= category.description
            - if category.available?
              .main_link
                %a{:href => category_path(category)}
                  %span= t('common.join_now')
    - unless category.available?
      .coming_soon{:style => "background-image: url('/stylesheets/imgs/coming_soon_#{I18n.locale}.png');"}
