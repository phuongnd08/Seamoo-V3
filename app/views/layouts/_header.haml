.header
  .logo
    = link_to image_tag("logo.png", :height => 78), root_path
  .topbar
    .hlinks{:style => "margin-right: 20px;"}
      = link_to "English", url_for(params.merge({:locale => :en, :only_path => true}))
      %span.lsep= "|"
      = link_to "Tiếng Việt", url_for(params.merge({:locale => :vi, :only_path => true}))

    .hlinks.personal
      - if current_user
        = t ".hello"
        = link_to current_user.display_name, current_user
        %span.lsep= "|"
        = link_to t("application.signout"), signout_path
      - else
        = link_to t("application.signin"), signin_path(:return_url => request.fullpath)
  .hmenus
    .nav
      %ul
        %li.youarehere
          = link_to t(".competition_system"), root_path
        %li
          = link_to t(".users"), users_path
        %li.disabled
          = link_to t(".training"), '#'
    .cbt
