%html
  %head
    %title SeamooV3
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    - if current_user
      %h3
      Hello
      = current_user.display_name
    - if (flash[:notice])
      %div{:style => 'border: solid 1px'}
        = flash[:notice]
    = yield