    .internal
      #status
      #match_players
        .internal
          %ul.list
      #exit{:style => 'display: none'}
        = form_tag leave_current_match_league_path(@league), :id => "leave_current_match_form" do
          = submit_tag t('.leave_current_match'), :class => "sad"
