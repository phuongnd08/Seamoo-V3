= form_for @multiple_choice do |f|
  -if @multiple_choice.errors.any?
    #error_explanation
      %h2= "#{pluralize(@multiple_choice.errors.count, "error")} prohibited this multiple_choice from being saved:"
      %ul
        - @multiple_choice.errors.full_messages.each do |msg|
          %li= msg

  %div
    = f.label :content
    = f.text_field :content
  %div
    - f.fields_for :options do |builder|
      = render 'option_fields', :f => builder
    %div
      = link_to_add_fields "Add choice", f, :options
  .actions
    = f.submit 'Save'
