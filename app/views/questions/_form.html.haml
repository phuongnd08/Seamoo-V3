= form_for @question do |f|
  - if @question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
      %ul
        - @question.errors.full_messages.each do |msg|
          %li= msg
  - if @question.data.is_a?(MultipleChoice)
    %div MultipleChoice
    %div
      - f.fields_for :data do |f|
        %h1 Fields
        %div
        = render 'multiple_choice_fields', :f => f
  .actions
    = f.submit 'Save'
